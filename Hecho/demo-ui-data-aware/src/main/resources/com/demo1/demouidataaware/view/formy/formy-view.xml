<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://formyView.title">
    <data>
        <instance id="formyDc" class="com.demo1.demouidataaware.entity.Formy">
            <loader id="formyDl"/>
            <fetchPlan extends="_base"/>
        </instance>
    </data>
    <layout>
        <formLayout dataContainer="formyDc">
                <textField id="firstNameField" property="firstName"></textField>
                <textField id="lastNameField" property="lastName"></textField>
                <textField id="emailField" property="email"></textField>
                <richTextEditor property="content"></richTextEditor>
            <button id="sendButton" text="Guardar"></button>
        </formLayout>
    </layout>
</view>